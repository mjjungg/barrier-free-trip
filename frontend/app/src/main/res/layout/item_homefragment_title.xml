<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/view_margin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/sub_pink" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nearby_fclt_title"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="12dp"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_margin"
            tools:text="@string/all_stay_nearby"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fclt_more"
            style="@style/Home_MoreInfoBtnStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="-4dp"
            android:drawableEnd="@drawable/ic_front"
            android:paddingHorizontal="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:text="@string/all_more_info"
            app:layout_constraintBottom_toBottomOf="@id/tv_nearby_fclt_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nearby_fclt_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>