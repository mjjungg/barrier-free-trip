<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_first="true" android:state_last="false" android:state_pressed="true">

        <shape>
            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp" />
            <solid android:color="@color/sub_pink" />
        </shape>
    </item>

    <item android:state_first="false" android:state_last="true" android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" />
            <solid android:color="@color/sub_pink" />
        </shape>
    </item>

    <item android:state_first="false" android:state_last="false" android:state_pressed="true">
        <color android:color="@color/sub_pink" />
    </item>

    <item android:state_pressed="false">
        <color android:color="@color/transparent" />
    </item>
</selector>