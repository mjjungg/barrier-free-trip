<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_window_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/main_pink" android:width="1dp"/>
                    <padding
                        android:top="6dp"
                        android:bottom="6dp"
                        android:right="10dp"/>
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/selector_spinner_btn"
                android:gravity="center|end"
                android:width="25dp"
                android:height="25dp" />
        </layer-list>
    </item>

